                                    <Label x:Name="l_JackofallTrades" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                    <Label Content="Jack of all Trades" FontFamily="Calibri"/>
                                </DockPanel>

