                                                    <CheckBox x:Name="cb_AthleticsExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_AthleticsBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Athletik" FontFamily="Calibri"/>
                                                </DockPanel>
                                            </DockPanel>
                                        </DockPanel>
                                    </DockPanel>
                                    <DockPanel x:Name="dp_Dexterity" LastChildFill="True" DockPanel.Dock="Top">
