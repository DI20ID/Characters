                                            <local:NumericTextbox x:Name="tb_Dexterity" BorderBrush="Black" BorderThickness="1" Height="43" TextWrapping="Wrap" Text="" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Calibri" Background="{x:Null}"/>
                                            <Label x:Name="l_Dexterity" BorderBrush="Black" BorderThickness="1" Content="+5" Height="87" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" FontWeight="Bold" Padding="5,5,5,5" FontFamily="Arial"/>
                                            <Label BorderBrush="Black" BorderThickness="1" Content="GESCHICKLICHKEIT" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="true" DockPanel.Dock="Left" Margin="5,0,0,0">
                                            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                                <CheckBox x:Name="cb_DexteritySaveThrow" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                <Label x:Name="l_DexteritySTBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                <Label Content="Rettungswurf" FontFamily="Calibri"/>
                                            </DockPanel>
                                            <DockPanel x:Name="dp_DexAbilities" LastChildFill="false">
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_AcrobaticsProficency" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_AcrobaticsExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_AcrobaticsBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Akrobatik" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_SleightOfHandProficency" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_SleightOfHandExpertice" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsTabStop="False"/>
                                                    <Label x:Name="l_SleightOfHandBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Fingerfertigkeit" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_StealthProficency" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_StealthExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_StealthBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Heimlichkeit" FontFamily="Calibri"/>
                                                </DockPanel>
                                            </DockPanel>
                                        </DockPanel>
                                    </DockPanel>
                                    <DockPanel x:Name="dp_Constitution" LastChildFill="True" DockPanel.Dock="Top">
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Width="155">
                                            <local:NumericTextbox x:Name="tb_Constitution"  BorderBrush="Black" BorderThickness="1" Height="43" TextWrapping="Wrap" Text="" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Calibri" Background="{x:Null}"/>
                                            <Label x:Name="l_Constitution" BorderBrush="Black" BorderThickness="1" Content="+5" Height="87" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" FontWeight="Bold" Padding="5,5,5,5" FontFamily="Arial"/>
                                            <Label BorderBrush="Black" BorderThickness="1" Content="KONSTITUTION" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Margin="5,0,0,0">
                                            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                                <CheckBox x:Name="cb_ConstitutionSaveThrow" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                <Label x:Name="l_ConstitutionSTBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                <Label Content="Rettungswurf" FontFamily="Calibri"/>
                                            </DockPanel>
                                            <DockPanel/>
                                        </DockPanel>
                                    </DockPanel>
                                    <DockPanel x:Name="dp_Intelligence" LastChildFill="True" DockPanel.Dock="Top">
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Width="155">
                                            <local:NumericTextbox x:Name="tb_Intelligence"  BorderBrush="Black" BorderThickness="1" Height="43" TextWrapping="Wrap" Text="" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Calibri" Background="{x:Null}"/>
                                            <Label x:Name="l_Intelligence" BorderBrush="Black" BorderThickness="1" Content="+5" Height="87" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" FontWeight="Bold" Padding="5,5,5,5" FontFamily="Arial"/>
                                            <Label BorderBrush="Black" BorderThickness="1" Content="INTELLIGENZ" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Margin="5,0,0,0">
                                            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                                <CheckBox x:Name="cb_IntelligenceSaveThrow" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                <Label x:Name="l_IntelligenceSTBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                <Label Content="Rettungswurf" FontFamily="Calibri"/>
                                            </DockPanel>
                                            <DockPanel LastChildFill="False">
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_ArcanaProficency"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_ArcanaExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_ArcanaBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Arkane Kunde" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_HistoryProficency"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_HistoryExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_HistoryBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Geschichte" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
