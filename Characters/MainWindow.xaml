                                                    <Label x:Name="l_InvestigationBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Nachforschungen" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_NatureProficency"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_NatureExpertice" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_NatureBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Naturkunde" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_ReligionProficency"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_ReligionExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_ReligionBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Religion" FontFamily="Calibri"/>
                                                </DockPanel>
                                            </DockPanel>
                                        </DockPanel>
                                    </DockPanel>
                                    <DockPanel x:Name="dp_Wisdom" LastChildFill="True" DockPanel.Dock="Top">
                                        <DockPanel LastChildFill="True" DockPanel.Dock="Left" Width="155">
                                            <local:NumericTextbox x:Name="tb_Wisdom"   BorderBrush="Black" BorderThickness="1" Height="43" TextWrapping="Wrap" Text="" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Calibri" Background="{x:Null}"/>
                                            <Label x:Name="l_Wisdom" BorderBrush="Black" BorderThickness="1" Content="+5" Height="87" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" FontWeight="Bold" Padding="5,5,5,5" FontFamily="Arial"/>
                                            <Label BorderBrush="Black" BorderThickness="1" Content="WEISHEIT" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="true" DockPanel.Dock="Left" Margin="5,0,0,0">
                                            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                                <CheckBox x:Name="cb_WisdomSaveThrow" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                <Label x:Name="l_WisdomSTBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                <Label Content="Rettungswurf" FontFamily="Calibri"/>
                                            </DockPanel>
                                            <DockPanel LastChildFill="false">
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_AnimalHandlingProficency"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_AnimalHandlingExpertice"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_AnimalHandlingBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Heilkunde" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_InsightProficency" Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_InsightExpertice" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_InsightBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Mit Tieren umgehen" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_MedicineProficency" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_MedicineExpertice" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_MedicineBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Motiv erkennen" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_PerceptionProficency" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_PerceptionExpertice" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <Label x:Name="l_PerceptionBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                    <Label Content="Überlebenskunst" FontFamily="Calibri"/>
                                                </DockPanel>
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
                                                    <CheckBox x:Name="cb_SurvivalProficency" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                    <CheckBox x:Name="cb_SurvivalExpertice" Content=""  Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
