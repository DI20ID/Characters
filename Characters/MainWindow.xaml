                                            <Label x:Name="l_Strength" BorderBrush="Black" BorderThickness="1" Content="+5" Height="87" DockPanel.Dock="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" FontWeight="Bold" Padding="5,5,5,5" FontFamily="Arial"/>
                                            <Label BorderBrush="Black" BorderThickness="1" Content="STÄRKE" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Calibri" FontWeight="Bold"/>
                                        </DockPanel>
                                        <DockPanel LastChildFill="true" DockPanel.Dock="Left" Margin="5,0,0,0">

                                            <DockPanel LastChildFill="True" DockPanel.Dock="Top">
                                                <CheckBox x:Name="cb_StrengthSaveThrow"  Content="" Background="{x:Null}" VerticalContentAlignment="Center" IsChecked="False" IsTabStop="False"/>
                                                <Label x:Name="l_StrengthSTBonus" Content="+20" Width="33" BorderBrush="Black" BorderThickness="1" FontFamily="Calibri"/>
                                                <Label Content="Rettungswurf" FontFamily="Calibri"/>
                                            </DockPanel>
                                            <DockPanel LastChildFill="false">
                                                <DockPanel LastChildFill="False" DockPanel.Dock="Top">
