<Window x:Class="Characters.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Characters"
        mc:Ignorable="d"
        Title="" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Padding="20,20,20,20">
    <Grid>
        <StackPanel>
            <TextBlock Text="Speichername?"/>
            <TextBox x:Name="_Key" MinWidth="20"/>
            <DockPanel>
                <Button Content="Speichern" Margin="0,0,20,0" Click="Button_Click"/>
                <Button Content="Abbrechen"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
